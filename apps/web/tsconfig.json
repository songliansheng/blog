{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
            // "react": ["./node_modules/@types/react"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "extends": "tsconfig/nextjs.json",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mdx",
        ".next/types/**/*.ts",
        "dust/ApolloClient-SSR.js",
        "app/page.tsx",
        "src/auth/authProviders.js",
        "app/english_pronunciation/compileMdx.tsx"
    ],
    "exclude": ["node_modules"]
}
