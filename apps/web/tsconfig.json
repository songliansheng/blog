{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["app/*"],
            "@@/*": ["*"],
            "react": ["./node_modules/@types/react"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "extends": "tsconfig/nextjs.json",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "app/(alternative)/posts/[slug]/editor.js"
, "app/ApolloClient-SSR.js", "app/page.mdx", "app/api/auth/[...nextauth]/authProviders.js"    ],
    "exclude": ["node_modules"]
}
