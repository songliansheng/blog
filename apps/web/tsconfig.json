{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "react": ["./node_modules/@types/react"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "extends": "tsconfig/nextjs.json",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mdx",
        ".next/types/**/*.ts",
        "src/components/ApolloClient-SSR.js",
        "src/app/page.mdx",
        "src/app/api/auth/[...nextauth]/authProviders.js"
    ],
    "exclude": ["node_modules"]
}
