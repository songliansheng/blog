{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["app/components/*"],
            "@/app/*": ["app/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "extends": "tsconfig/nextjs.json",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "app/(alternative)/posts/[slug]/editor.js"
, "app/ApolloClient-SSR.js", "app/page.mdx"    ],
    "exclude": ["node_modules"]
}
