{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "**/*.mdx",
    ".next/types/**/*.ts",
    "app/[menu]/[slug]/client.mjs",
    "../../packages/demo/Stopwatch.tsx"
  ],
  "exclude": ["node_modules"]
}
